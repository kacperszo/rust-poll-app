<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
    />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css"
    />
    <title>Rust Pool App</title>
  </head>
  <body>
 <main class="container">
        <h1>{{ title }}</h1>
        <form method="post" action="/pools/{{ pool_id }}/vote">
            <div>
                {{#each options}}
                    <label>
                        <input type="radio" name="option" value="{{ this.idx }}" />
                        {{ this.option }} ({{ this.votes }} votes)
                    </label>
                {{/each}}
            </div>
            <button type="submit">Vote</button>
        </form>
        <a href="/">Back to main page</a>
    </main>
    <script>
    </script>
  </body>
</html>